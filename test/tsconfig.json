{
    "compilerOptions": {
        "module": "es2015",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "target": "ES3",
        "outDir": "./build/js",
        "rootDir": "./src",
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "compileOnSave": true,
    "files": [
        "./src/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}